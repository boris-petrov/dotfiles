set runtimepath=~/pentadactyl

set complete=bhs
set findcase=ignore
set novisualbell
set hlfind
set autocomplete=
set newtab=all
set wildcase=.?:ignore
set guioptions+=M
set wildmode=

javascript dactyl.beep = function() { return false; }

colorscheme desert

nmap -builtin J 15j
nmap -builtin K 15k
nmap -builtin j 5j
nmap -builtin k 5k

nmap h gT
nmap l gt
nmap H <C-o>
nmap L <C-i>

nmap gb <C-o>
nmap <BS> <C-o>

nmap -builtin <C-c> <C-v><C-c>
imap -builtin <C-v> <C-v><C-v>

" TODO: how?!
" cmap <RETURN> <TAB><RETURN>

nmap <C-d> :q<RETURN>

nmap -builtin <ESC> <C-c>:noh<RETURN>
