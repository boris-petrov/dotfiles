[user]
	name = Boris Petrov
	email = boris_petrov@live.com
[github]
	user = boris-petrov
[diff]
	tool = meld
[merge]
	ff = no
	tool = meld
[alias]
	co = checkout
	st = status
	br = branch
	l = log --graph --decorate --pretty=oneline --abbrev-commit
	cleanup = !git branch --merged master | grep -v 'master$' | xargs git branch -d
	unstage = reset HEAD --
	sync = !git stash && git pull && git push && git stash pop
[pull]
	ff = no
	rebase = true
[push]
	default = simple
[log]
	follow = yes
	date = iso
[format]
	pretty = %C(blue)%h%C(red) %an %C(green)%ad%C(reset)%d%n%B
[core]
	autocrlf = input
	whitespace = fix,space-before-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore_global
[branch]
	autosetuprebase = always
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green
	changed = red
	untracked = cyan
[fetch]
	prune = true
