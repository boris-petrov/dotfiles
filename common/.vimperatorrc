set noautocomplete
set complete=bhs
set focuscontent
set hlsearch
set status=input,location,bookmark,history,position
set showstatuslinks=2
set nosmartcase
set gui=tabs
set newtab=all
set wildmode=

colorscheme vimPgray

nnoremap J 15j
nnoremap K 15k
nnoremap j 5j
nnoremap k 5k

"" swap p/P
nnoremap p P
nnoremap P p

"" U list closed tabs
nnoremap U :undo<Space>

"" open addons manager
nnoremap ,a :tabnew about:addons<CR>

"" private mode
nnoremap ,p :set private!<CR>

"" about:config
nnoremap ,c :tabnew about:config<CR>

nmap h gT
nmap l gt
nmap H <C-o>
nmap L <C-i>

nmap gb <C-o>
nmap <BS> <C-o>

cnoremap <TAB> <TAB><RETURN>

nnoremap <ESC> <C-c>:noh<RETURN>
nmap w :tabnew wikipedia 

nmap b :bmarks<RETURN>
