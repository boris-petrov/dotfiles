[user]
	name = Boris Petrov
	email = boris_petrov@live.com
[github]
	user = boris-petrov
[diff]
	tool = meld
[merge]
	tool = meld
[alias]
    co = checkout
    st = status
	br = branch
	l = log --graph --decorate --pretty=oneline --abbrev-commit
[push]
	default = tracking
[log]
    date = iso
[format]
	pretty = %C(blue)%h%C(red) %an %C(green)%ad%C(reset)%d%n%B
[core]
	autocrlf = input
	whitespace = fix,trailing-space
[branch]
	autosetuprebase = always
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green
	changed = red
	untracked = cyan
