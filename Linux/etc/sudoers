Cmnd_Alias PROGS = /usr/bin/pacman,/usr/bin/systemctl poweroff,/usr/bin/systemctl reboot,/usr/bin/mount,/usr/bin/umount,/usr/bin/psd-overlay-helper
Defaults! PROGS setenv
root ALL=(ALL) ALL
boris ALL=(ALL) ALL
boris ALL = NOPASSWD: PROGS

## Read drop-in files from /etc/sudoers.d
## (the '#' here does not indicate a comment)
#includedir /etc/sudoers.d
