#!/bin/sh

if xrandr | grep -q '^VGA1 connected'; then
  echo 'two screens'
  xrandr --output LVDS1 --auto
  xrandr --output VGA1 --auto --right-of LVDS1 --primary
  xset -dpms
else
  echo 'laptop display'
  xrandr --output LVDS1 --auto --primary
  xrandr --output VGA1 --off
  xset +dpms
fi

~/bin/fix_layout
